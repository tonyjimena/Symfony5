<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <title>{% block title %}Bienvenido!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/code.svg') }}" type="image/x-icon">
        {% block stylesheets %}
        <link href="{{ asset('css/main.css') }}" rel="stylesheet" media="screen"/>
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" media="screen"/>
        <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <!--Navbar-->
        {% include 'layouts/navbar.html.twig' %}
        <!--Navbar-->
        
        <div class="spinner-grow float-right" id="cargador" style="width: 3rem; height: 3rem;" role="status">
            <!--<span class="sr-only">Loading...</span>-->
        </div>

        <div class="fade-in" id="front">
        {% block body %}
            <!--Contenido de la pagina-->
        {% endblock %}
        </div>
        {# WhatsApp #}
			<a id="wa-btn" href="https://api.whatsapp.com/send?phone=34666666666&amp;text=Hola%2C%20me%20gustar%C3%ADa%20trabajar%20con%20vosotros%21" target="_blank" title="Contacta por WhatsApp" rel="nofollow" class="wa-btn">
                    <img src="{{ asset('img/wa-icon.jpg')}}" class="wassap"/>
            </a>
        <div id="page-loader"><span class="preloader-interior"></span></div>

        <div class="contenedor">
          <div class="alertas">
          </div>
        </div>

        <!--Footer-->
        {% include 'layouts/footer.html.twig' %}
        <!--Footer-->
        {% include 'layouts/modals.html.twig' %}

        {% block javascripts %}
        <script src="{{ asset('js/jquery-3.4.1.min.js')}}"></script>
        <script src="{{ asset('js/popper.min.js') }}" ></script>
        <script src="{{ asset('js/main.js') }}"></script>
        <script defer src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>